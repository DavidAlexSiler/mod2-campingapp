<h1 class="about">Popular Destinations</h1>


<!-- list of planets -->
<% @planets.in_groups_of(4, false).each do |group| %>
    <div class='row'>
      <% group.each do |planet| %>
        <div class='col-md-3'>
        <p class="name"><%= planet.name %></p>
          <a href="<%= planet_path(planet)%>">
            <img src="<%= planet.planet_img_url %>" class="planet_pic">
            </a>
          </div>
      <% end %>
    </div>
  <% end %>

