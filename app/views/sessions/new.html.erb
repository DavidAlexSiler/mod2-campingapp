<h1>Login</h1>

<% if @error %>
    <p style="color: red;"><%= @error %></p>
    <%end%>

    <%= form_tag do %>
        <%= label_tag("Username: ") %>
        <%= text_field_tag (:username) %>
        <%= label_tag ("Password: ") %>
        <%= password_field_tag (:password) %>
        <%= submit_tag("login")%>
        <%end%>

        <%=button_to("logout", logout_path, method: :delete)%>
  <p> <%= flash[:info] %></p>
  </body>
